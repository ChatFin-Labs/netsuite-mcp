# =============================================================================
# NetSuite MCP Server - Environment Configuration Example
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files to version control - they contain sensitive data

# =============================================================================
# Server Configuration
# =============================================================================

# Port for the HTTP server (default: 3000)
PORT=3000

# =============================================================================
# NetSuite Configuration (REQUIRED)
# =============================================================================

# NetSuite REST API base URL
# Format: https://[account_id].suitetalk.api.netsuite.com/services/rest/
NETSUITE_REST_URL=https://your-account-id.suitetalk.api.netsuite.com/services/rest/

# NetSuite Search RESTlet URL for custom search operations
# This should point to your deployed custom search RESTlet
NETSUITE_SEARCH_REST_LET=https://your-account-id.restlets.api.netsuite.com/app/site/hosting/restlet.nl?script=customscript_cf_search_rl&deploy=customdeploy_cf_search_rl

# NetSuite OAuth 2.0 Access Token (JWT)
# This is a long JWT token string - get this from your NetSuite OAuth setup
NETSUITE_ACCESS_TOKEN=your_jwt_access_token_here

# =============================================================================
# NetSuite Configuration (OPTIONAL)
# =============================================================================

# Comma-separated list of NetSuite account types to filter
# Leave empty to include all account types
NETSUITE_ACCOUNT_TYPES="Accounts Payable,Accounts Receivable,Bank,Cost of Goods Sold,Credit Card,Deferred Expense,Deferred Revenue,Equity,Expense,Fixed Asset,Income,Long Term Liability,Non Posting,Other Asset,Other Current Asset,Other Current Liability,Other Expense,Other Income"

# =============================================================================
# Ngrok Configuration (DEVELOPMENT)
# =============================================================================

# Ngrok authentication token (get from https://dashboard.ngrok.com/get-started/your-authtoken)
NGROK_AUTH_TOKEN=your_ngrok_auth_token_here

# Your reserved ngrok domain (get from https://dashboard.ngrok.com/cloud-edge/domains)
NGROK_DOMAIN=your-subdomain.ngrok-free.app

# =============================================================================
# Security Configuration (PRODUCTION)
# =============================================================================

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=https://claude.ai,https://www.anthropic.com

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=127.0.0.1,localhost,your-domain.ngrok-free.app

# =============================================================================
# Logging Configuration
# =============================================================================

# Log level: error, warn, info, debug (default: info)
LOG_LEVEL=info

# Enable file logging (true/false) - when false, logs to console
LOG_TO_FILE=true

# Maximum log file size before rotation (e.g., 10m, 50mb, 1gb)
LOG_MAX_SIZE=10m

# Maximum number of log files to keep
LOG_MAX_FILES=5

# =============================================================================
# Development & Debugging
# =============================================================================

# Set to 'development' for additional debug features
# NODE_ENV=development

# Enable detailed error reporting
# DEBUG=true