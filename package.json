{
  "name": "@chatfinai/netsuite-mcp",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for accessing NetSuite data through RESTlets and SuiteQL queries",
  "main": "dist/index.js",
  "bin": {
    "netsuite-mcp-http": "dist/http-server.js",
    "netsuite-mcp-stdio": "dist/stdio-server.js"
  },
  "keywords": [
    "netsuite",
    "mcp",
    "model-context-protocol",
    "chatfinai"
  ],
  "author": "ChatFinAI <support@chatfin.ai>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChatFinAI/netsuite-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ChatFinAI/netsuite-mcp/issues"
  },
  "homepage": "https://github.com/ChatFinAI/netsuite-mcp#readme",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    ".env.example",
    "examples/**/*",
    "setup/**/*",
    "package.json"
  ],
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rm -rf dist && mkdir -p logs && rm -f logs/ngrok.log logs/app.log",
    "dev": "yarn ngrok & yarn start:http",
    "start:http": "source .env && node dist/http-server.js",
    "start:stdio": "source .env && node dist/stdio-server.js",
    "build": "rimraf dist/ && tsc -p .",
    "prepublishOnly": "yarn build",
    "lint": "eslint . --ext .ts",
    "ngrok": "source .env && [ -n \"$NGROK_AUTH_TOKEN\" ] && [ -n \"$NGROK_DOMAIN\" ] && ngrok http --config=ngrok.yml --log-level=debug --authtoken=\"$NGROK_AUTH_TOKEN\" --domain=\"$NGROK_DOMAIN\" 3000 || echo \"[NOTICE]: Ngrok tunnel not running - NGROK_AUTH_TOKEN or NGROK_DOMAIN not set\"",
    "stop": "pkill -f 'node dist/http-server.js'; pkill -f 'node dist/stdio-server.js'; pkill -f 'ngrok http'; pkill -f '@modelcontextprotocol/inspector'; sleep 1; pkill -9 -f 'node dist/stdio-server.js' 2>/dev/null || echo 'All processes stopped'",
    "inspector": "npx @modelcontextprotocol/inspector node dist/stdio-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-http-context": "^2.0.1",
    "fuse.js": "^7.0.0",
    "json2typescript": "^1.6.1",
    "lodash": "^4.17.21",
    "luxon": "^3.4.3",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "uuid": "^13.0.0",
    "winston": "^3.10.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/eslint": "^9.6.1",
    "@types/express": "^4.17.18",
    "@types/lodash": "^4.17.20",
    "@types/luxon": "^3.7.1",
    "@types/node": "^20.4.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.8.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "nodemonConfig": {
    "exec": "ts-node src/http-server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts"
  }
}
